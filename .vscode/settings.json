{
    "python.defaultInterpreterPath": "C:\\ProgramData\\Miniconda3\\python.exe",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    
    // create a terminal profile in `#terminal.integrated.profiles.windows#` and set its profile name in 
    // `#terminal.integrated.defaultProfile.windows#`
    "terminal.integrated.defaultProfile.windows":"Command Prompt (Conda Django)",

    // Force line endings
    "files.eol": "\n",
    "cSpell.enabled": true,

    // Pylint whitelist certain Django objects to prevent unnecessary errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=django",
        "--disable=E011",
        "--generated-members",
        "from_json,query",
    ]
}